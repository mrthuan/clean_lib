<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#eeeeee"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/notibox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_notibox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/str_notibox"
            android:textColor="#303030"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <GridView
            android:id="@+id/gr_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"></GridView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <ImageView
            android:id="@+id/btnback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:padding="12dp"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:text="@string/str_notiboxtitle"
            android:textColor="#3d3d3d"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_height="50dp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:padding="12dp"
        android:layout_marginRight="110dp"
        android:src="@drawable/ic_delete" />
    <ImageView
        android:id="@+id/btnNoti"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="60dp"
        android:padding="15dp"
        android:src="@drawable/ic_noticationbox" />

    <ImageView
        android:id="@+id/btnAppNoti"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:padding="15dp"
        android:src="@drawable/ic_settings" />

</FrameLayout>
